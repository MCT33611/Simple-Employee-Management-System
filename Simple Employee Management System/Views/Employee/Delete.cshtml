@model Simple_Employee_Management_System.Models.Employee

@{
    ViewData["Title"] = "Delete Employee";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h4>Delete Confirmation</h4>
                </div>
                <div class="card-body">
                    <h5 class="card-title">Are you sure you want to delete this employee?</h5>

                    <div class="alert alert-warning" role="alert">
                        <strong>Warning:</strong> This action cannot be undone!
                    </div>

                    <p><strong>Name:</strong> @Model.FirstName @Model.LastName</p>
                    <p><strong>Email:</strong> @Model.Email</p>

                    <form asp-action="Delete" asp-route-id="@Model.EmployeeId" method="post">
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            <input type="submit" value="Delete" class="btn btn-danger" />
                            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
