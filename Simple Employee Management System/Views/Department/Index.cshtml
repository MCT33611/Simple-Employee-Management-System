@model IEnumerable<Simple_Employee_Management_System.Models.Department>

@{
    ViewData["Title"] = "Departments";
}

<h2>@ViewData["Title"]</h2>

<!-- Button to redirect to the Create view -->
<a asp-action="Create" class="btn btn-primary mb-3">Create New Department</a>

<!-- Bootstrap table for displaying departments -->
<table class="table table-striped table-bordered">
    <thead class="thead-light">
        <tr>
            <th>Department ID</th>
            <th>Department Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var department in Model)
        {
            <tr>
                <td>@department.DepartmentId</td>
                <td>@department.DepartmentName</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@department.DepartmentId" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@department.DepartmentId" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Add Bootstrap and jQuery if not already included in your layout -->
@section Scripts {
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kQtIn8qAuhuWz1L3p3B6K2Jt8B1rZL/WqPtP+md8fGFFVCCy7HEGf3Z5L6bNkJd" crossorigin="anonymous"></script>
}
